{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended"
    ],
    "plugins": [
        "html"
    ],
    "rules": {
        "vue/no-parsing-error": [
            2,
            {
                "x-invalid-end-tag": false
            }
        ],
        "indent": [
            1,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "error"
        ],
        "vue/html-self-closing": "off"
    }
}